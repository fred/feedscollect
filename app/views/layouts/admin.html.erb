<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= @title %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'stylesheet' %>
    <%= stylesheet_link_tag 'table' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    
    <div id="wrapper"><!-- Begin wrapper -->

  		<div id="header"><!-- Begin header -->
  			<h1><a href="/admin" title="Back to home">Geek Homepage</a></h1>
  			<ul>
  			  <li><%= link_to "Categories:", admin_categories_url %></li>
  			  <% Category.all.each do |t| %>
  			    <li class="<%=highlight(t.id)%>"><%= link_to t.title, admin_category_feed_sites_path(t) %></li>
  			  <% end %>
  			</ul>
  		</div>

  		<hr />

  		<div id="outer-space"><!-- Begin outer-space -->

  			<div id="hfeed">

  				<p id="page-info">
  				  <span><%= @title %></span>
  				</p>

  				<div class="hentry">

  					<div class="entry-meta">
  					  
  					  <%- flash.each do |name, msg| -%>
                <%= content_tag :div, msg, :id => "flash_#{name}" %>
              <%- end -%>

              <%= yield %>
              
   					</div>

  				</div>

  				
  			</div>

  			<hr />

  			<div class="clear"></div>

  		</div><!-- End outer-space -->
  		
  		<div class="clear"></div>

  		<hr />

  		<div id="footer">
  			<p>
  			  <%= link_to "Categories", admin_categories_path %> |
  			  <%= link_to "New Category", new_admin_category_path %> |
  			  <%= link_to "Feed Sites", admin_feed_sites_path %> |
  			  <%= link_to "New Feed Site", new_admin_feed_site_path %> |
  			  <%= link_to "Settings", admin_settings_path %>
  			</p>
  			<p><em>valid</em> <a href="#">XHTML</a> <em>&amp;</em> <a href="#">CSS</a></p>
  		</div>

  	</div><!-- End wrapper -->
  	
  	
  </body>
</html>
