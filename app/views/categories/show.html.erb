<% #cache "#{@feed_site.user_id.to_i}/categories/#{@category.id}" do 
%>
  <% i = 1 %>
  <% for feed_site in @feed_sites %>
    <% i+=1 %>
    <div class="box">
      <div class="box_title">
        <p>
          <% if feed_site.avatar? %>
            <%= link_to(image_tag(feed_site.avatar.url(:large)), feed_site, :title => h(feed_site.title)) %>
          <% else %>
            <%= link_to(h(feed_site.title), feed_site, :title => h(feed_site.title))%>
          <% end %>
        </p>
      </div>
      <div class="box_content">
        <% feed_site.feed_entries.per_box.each do |t| %>
          <p> - <%= link_to(t.title.to_s, h(t.url), :title => get_feed_title(t)) %> </p>
        <% end %>
      </div>
    </div>
    <% if i%3==1 %>
      <br clear="both"/>
    <% end %>
  <% end %>
  
<% #end 
%>
<script type='text/javascript'>
  $(document).ready(function(){
    $('a[title]').qtip({ 
      style: { 
        name: 'cream', 
        tip: {corner: 'topLeft'},
      },
      position: { 
        corner: {
          target: 'topRight',
          tooltip: 'bottomLeft'
        }
      }
    })
	});
</script>