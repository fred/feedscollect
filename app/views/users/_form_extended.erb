
<%= form.label :full_name %>
<%= form.text_field :full_name, :size => 24 %>


<%= form.label :feeds_per_page, "Display items per RSS Feed" %>
<%= form.select :feeds_per_page, options_for_select([[5, 5], [10,10], [15,15], [20,20], [25,25]], @user.feeds_per_page) %>


<%= form.label :font_size %>
<%= form.select :font_size, options_for_select([["tiny",0.7], ["small","0.8"], ["normal", 0.9], ["large","1.0"],["larger","1.1"],["huge","1.2"] ], @user.font_size) %>


<%= form.label :home_page_category_id, "Default Home Page" %>
<%= form.select :home_page_category_id, Category.all.collect {|p| [ p.title, p.id ] }, { :include_blank => true } %>
