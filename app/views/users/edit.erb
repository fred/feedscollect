<% form_for @user, :url => account_path do |f| %>
  <div id="columnarForm">
    <fieldset>
      <legend><%= @title %></legend>
      <%= render :partial => "form", :object => f %>
    </fieldset>
  
    <fieldset>
      <legend>Extra</legend>
      <%= render :partial => "form_extended", :locals => {:form => f} %>
      <%= f.submit "Update" %>
    </fieldset>
  </div>
  <%= f.error_messages %>
<% end %>
