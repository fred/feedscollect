<% form_for @user, :url => account_path do |f| %>
  <div id="columnarForm">
    <fieldset>
      <legend><%= @title %></legend>
      <%= render :partial => "form", :object => f %>
    </fieldset>
  
    <fieldset>
      <legend>Extra</legend>
      <%= render :partial => "form_extended", :locals => {:form => f} %>
    </fieldset>
    
    <fieldset>
      <legend>Categories</legend>
      <%= render :partial => "form_extended2", :locals => {:form => f} %>
    </fieldset>
  </div>
  <br clear="both"/>
  <%= f.submit "Update" %>
  
  <%= f.error_messages %>
<% end %>
