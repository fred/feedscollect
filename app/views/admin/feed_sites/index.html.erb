<table id="hor-minimalist-b">
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Logo</th>
    <th>Sort</th>
    <th>Last Modified</th>
    <th>ETAG</th>
    <th>Entries</th>
    <th>Summary</th>
    <th>Content</th>
    <th> </th>
    <th> </th>
  </tr>
  <% for feed_site in @feed_sites %>
    <tr>
      <td> 
        <%= image_tag("star.png") if feed_site.featured %>
        <%= link_to(h(feed_site.title), admin_feed_site_path(feed_site)) %>
      </td>
      <td><%= link_to(feed_site.category_name, admin_category_path(feed_site.category)) if feed_site.category %></td>
      <td><%= feed_site.avatar? ? "Yes" : "No" %></td>
      <td><%= feed_site.sort_order %></td>
      <td><%=h feed_site.last_modified.to_s(:short) if feed_site.last_modified %></td>
      <td><%=h feed_site.etag ? "Yes" : "No" %></td>
      <td><%=h feed_site.feed_entries.count %></td>
      
      <td><%= to_file_size feed_site.summary_total_size %></td>
      <td><%= to_file_size feed_site.content_total_size %></td>
      
      <td><%= link_to "Edit", edit_admin_feed_site_path(feed_site) %></td>
      <td><%= link_to "Del", admin_feed_site_path(feed_site), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />
<p><%= link_to "New Feed Site", new_admin_feed_site_path %></p>
