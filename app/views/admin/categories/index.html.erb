<table id="hor-minimalist-b">
  <tr>
    <th>Title</th>
    <th>Desc</th>
    <th>Sites</th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.title.to_s, admin_category_path(category) %></td>
    <td><%= category.description %></td>
    <td><%= category.feed_sites.count %></td>
    <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
    <td><%= link_to 'Destroy', admin_category_path(category), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

